doctype html
head
  base(href='/')
  title Calendar for MIYOUNG
  meta(charset='utf8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='calendar.css')
  link(rel='stylesheet' href='sideNavi.css')

span #{nickname}
if is_logined
    |  | 
    a(href='/auth/logout') 로그아웃
else 
    a(href='/auth/login') 로그인

include sideNavi.pug

table
  colgroup
    col(span='5' style='width: 18%;')
    col(span='2' style='width: 5%;')
  thead
    tr
      td(colspan='7')
        button#prsMonthBtn 이번 달
        button#prevMonthBtn <
        span#yearMonth #{year}년 #{month}월
        button#nextMonthBtn >
        button#srchBtn 사건 검색
    tr
      td 월요일
      td 화요일
      td 수요일
      td 목요일
      td 금요일
      td 토요일
      td 일요일
  tbody
    tr#w1
    tr#w2
    tr#w3
    tr#w4
    tr#w5
    tr#w6
script(src='calendar.js')
script(src='sideNavi.js')
